footer.footer
  .container.footer__container
      .footer__auth
        if(user)
          span.title-name=user.name
          a(href="/login/out").title-name (Выход)
          div
            a(href="/admin/").title-name Админка
        else
          a(href="/login").title-name Авторизация
      .footer__social
        ul.social
          each item in socials
            li.social__item
              a.social__link(href="http://")
                i(class=`fab ${item}`)
